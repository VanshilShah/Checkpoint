<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vanshil.checkpoint.SelectedActivity"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e8e8e8">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/header_image"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/running_destination_textview"
            android:layout_alignEnd="@+id/running_destination_textview" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="#ffffff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reward:"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:clickable="false"
                        android:phoneNumber="false" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="15.8 km"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/reward_amount_textview"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Run Length:"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:clickable="false"
                        android:phoneNumber="false" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="15.8 km"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/running_destination_textview"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remaining Distance to destination:"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:clickable="false"
                        android:phoneNumber="false" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="15.8 km"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/textView2"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />
                </LinearLayout>



            </LinearLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Start Run"
                android:id="@+id/start_run_button"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:onClick="onStartButtonClick"
                android:layout_margin="10dp" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView3"
        android:layout_gravity="right"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="160dp"
        android:background="@mipmap/location_icon_blue" />

</RelativeLayout>
